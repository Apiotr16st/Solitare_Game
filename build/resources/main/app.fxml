<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="950.0" minWidth="1250.0"
            fx:controller="org.example.controller.GameController" style="-fx-background-color: green">
    <top>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" fx:id="usedStacks" spacing="10" >
            </HBox>
            <HBox alignment="CENTER" fx:id="toUseStack" spacing="10" >
            </HBox>
            <HBox alignment="CENTER" fx:id="stackPanes" spacing="20">
            </HBox>
        </VBox>
    </top>
    <center>
        <Button fx:id="undoMove" text="undo"/>
    </center>
</BorderPane>
