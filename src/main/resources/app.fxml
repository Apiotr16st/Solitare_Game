<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="main"
            minHeight="950.0" minWidth="850.0"
            fx:controller="org.example.controller.GameController" style="-fx-background-color: green">
    <top>
        <VBox alignment="CENTER" spacing="20">
            <HBox alignment="CENTER" spacing="170">
                <HBox fx:id="toUseStack" alignment="CENTER" spacing="20"/>
                <HBox fx:id="usedStacks" alignment="CENTER" spacing="20"/>
            </HBox>
            <HBox alignment="CENTER" fx:id="stackPanes" spacing="20"/>
        </VBox>
    </top>
    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="undoMove" text="undo"/>
        </HBox>
    </bottom>
</BorderPane>
